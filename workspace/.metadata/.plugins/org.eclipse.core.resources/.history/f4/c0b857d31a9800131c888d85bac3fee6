#include <stdio.h>
#include <unistd.h>
#include "system.h"
#include <time.h>
#include <stdlib.h>
#include "VideoFunctions.h"
#include "altera_avalon_pio_regs.h"
#include "alt_types.h"

int main() {

	alt_u32 current_value = 1;
	alt_u32 current_state = 3;
	alt_u8 current_direction = 0;
	alt_u32 keys = 0;

	printf("Program running (UART)...\n");
	fprintf(stderr, "Program running (LCD)...\n");
	while (1) {
		int i = 0;
		for(i = 0; i < 64; i ++){
			printCharToScreen(i, 59, "aaaaaaaaaaaaaaPPPPPPaaaaaaaaaaaa");
		}
		//printCharToScreen(0, 59, "Test 1");
		//displayImage();
		usleep(125000);
	}
	return 0;
}
